<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.heartlink.dao.PictureDao">
    
    <insert id="uploadFile" parameterType="com.heartlink.model.Picture"> 
     	INSERT INTO picture (USERID, picbytes) VALUES (#{userid}, #{picbytes}) 
    </insert>
    
    <select id="downloadFile" parameterType="String" resultType="com.heartlink.model.Picture">
        select * from picture where userid = #{userid}
    </select>
    
    <update id="updateFile" parameterType="com.heartlink.model.Picture">
        update picture set picbytes = #{picbytes} where userid = #{userid}
    </update>
	
    <select id="selectMaxNumber" resultType="int" parameterType="String">
		select count(*) from picture where userid = #{userid}
    </select>
    
</mapper>
